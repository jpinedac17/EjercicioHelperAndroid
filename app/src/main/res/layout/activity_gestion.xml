<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextBuscarNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar contacto por nombre"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonBuscar"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewResultadoNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextBuscarNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewResultadoTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultadoNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonLlamar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Llamar al Contacto"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultadoTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
